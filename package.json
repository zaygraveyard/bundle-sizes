{
  "name": "@ziadkh0/bundle-sizes",
  "version": "0.1.0",
  "description": "A library and CLI to create and analyse the sizes of files",
  "main": "src/index.js",
  "module": "src/main.js",
  "bin": "src/cli.js",
  "repository": "zaygraveyard/bundle-sizes",
  "scripts": {
    "lint": "eslint src test",
    "fmt": "eslint src test --fix",
    "pretest": "npm run -s lint",
    "test": "ava",
    "preversion": "npm test",
    "prepublishOnly": "npm test && git push && git push --tags"
  },
  "files": [
    "src"
  ],
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all"
  },
  "ava": {
    "files": [
      "test/**/*",
      "!test/fixtures"
    ],
    "require": [
      "esm"
    ]
  },
  "keywords": [
    "cli",
    "compare size",
    "file size",
    "gzip size",
    "bundle size"
  ],
  "author": "Ziad EL KHOURY HANNA",
  "license": "MIT",
  "dependencies": {
    "colors": "^1.4.0",
    "esm": "^3.2.25",
    "filesize": "^6.1.0",
    "minimist": "^1.2.5"
  },
  "devDependencies": {
    "@getify/eslint-plugin-proper-arrows": "^9.1.1",
    "ava": "^3.8.1",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-prettier": "^3.1.3",
    "prettier": "^2.0.5"
  }
}
